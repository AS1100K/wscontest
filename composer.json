{
    "name": "wikisource/wscontest",
    "type": "project",
    "require": {
        "slim/slim": "^3.10",
        "slim/twig-view": "^2.4",
        "mediawiki/oauthclient": "^0.1",
        "krinkle/intuition": "^0.7",
        "tedivm/stash": "^0.14",
        "addwiki/mediawiki-api": "^0.7",
        "doctrine/dbal": "^2.5",
        "symfony/console": "^3.4",
        "wikisource/api": "^1.4",
        "illuminate/database": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Wikisource\\WsContest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wikisource\\WsContest\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "5.6"
        }
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^1.0",
        "mediawiki/mediawiki-codesniffer": "^19.0",
        "phpunit/phpunit": "^5.0",
        "mediawiki/minus-x": "^0.3"
    },
    "scripts": {
        "mkconfig": [
            "php -r \"file_exists('config.php') || copy('config.dist.php', 'config.php');\""
        ],
        "post-install-cmd": [
            "@mkconfig"
        ],
        "post-update-cmd": [
            "@mkconfig"
        ]
    }
}
